<UserControl x:Class="Projekt1.Controls.KategoriaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Button x:Name="KategoriaMenuButton" Click="KategoriaMenuButton_Click" Grid.Row="0" Content="Kategoria" Style="{StaticResource KategoriaButtonStyle}"/>
        <StackPanel x:Name="KategoriaMenu" Grid.Row="1" Visibility="Collapsed">
            
        </StackPanel>
    </Grid>
</UserControl>
